%h1 Articles List:
.row
  .col-sm-8.col-md-4.col-lg-3
    = search_form_for @q, :url => articles_url,
     :class => "form", remote: true, :role => :search do |f|
      .form-group
        .input-group
          = f.search_field :title_cont, :class => "form-control", :placeholder => "search title"
          .input-group-btn
            = button_tag(type: "submit", class: "btn btn-default") do
              %i.glyphicon.glyphicon-search
  .col-sm-5.col-md-6.col-lg-6
    %form.form
      %select#tag-select.form-control{:multiple => "multiple"}

- if can? :create, Article
  = link_to 'New article', new_article_path

#results= render "articles/list", :articles => @articles
